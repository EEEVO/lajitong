
.content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30px;

}
@media (min-width: 600px) {
    .content {
        justify-content: flex-start;
    }
    .iptbox {
        margin-right: 30px;
    }
}

.iptbox {
    width: 44px!important;
    height: 44px!important;
    /*margin-right: 2%;*/
    border: 1px solid #999;
    border-radius: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 20px;
}
.iptbox:last-child {
    margin-right: 0;
}

.ipt {
    width: 0;
    height: 0;
}

.wrapped {
    border-color: #F5B427;
